@using HaiSanShop.Data.Entites
@model IEnumerable<BangGia>
@{
    ViewBag.Title = "BangGia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-secondary">Bảng Giá Niêm Yết</h2>
<br /><br />
<table class="table table-sm">
    <thead>
        <tr>
            <th scope="col">Mã</th>
            <th scope="col">Tên</th>
            <th scope="col">Giá Niêm Yết</th>
            
        </tr>
    </thead>
    <tbody>
       
        @foreach(var item in Model)
        {
            int i = 1;
            <tr>
                <th scope="row">@i</th>
                <td>@item.TenSanPham</td>
                <td>@item.Gia.ToString("#,##")VNĐ</td>
                 
            </tr>
        }


    </tbody>
</table>

