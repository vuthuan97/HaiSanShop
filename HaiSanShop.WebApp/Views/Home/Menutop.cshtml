@using HaiSanShop.Data.Entites
@model IEnumerable<SanPham>


<div class="ban-top">
    <div class="container">
        <div class="btn-group agileits-navi_search h6">
            <a class="btn btn-success dropdown-toggle"  data-toggle="dropdown" href="#">
               Lựa Chọn Mục Sản Phẩm
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" style="width:300px; font-size:16px">
                @foreach (var group in Model.GroupBy(c => c.LoaiSanPhams)) //loại sản phẩm ở đây nhớ ko nhầm vừa nó ko lấy được dữ liệu nên ko thể phân theo loaisp được
                {
                    if (group.Key != null)
                    {
                        <li style="padding: 0px 5px"><h3 class=" label label-info" >@group.Key.TenLoai</h3></li>
                        foreach (var item in group.GroupBy(c=>c.DanhMucSanPhams))
                        {
                            if (item.Key != null)
                            {
                                <li style="padding: 0px 20px" class="bor">
                                  <a href="@Url.Action("DanhMuc","SanPham",new {@MaLoai =group.Key.MaLoaiSP,@MaDM=item.Key.MaDM})">
                                         @item.Key.TenDanhMuc</a>
                                   @*@Html.Action("DanhMuc", "SanPham", new {@MaLoai = group.Key.MaLoaiSP,@MaDM =item.Key.MaDM })*@
                                   
                                </li>
                            }
                        }
                    }

                }

            </ul>
        </div>
        <div class="top_nav_left">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse menu--shylock" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav menu__list">
                            <li class="active">

                                @Html.ActionLink("Trang Chủ", "Index", new { }, new { @class = "nav-stylehead" })
                            </li>
                            <li class="">

                                @Html.ActionLink("Giới Thiệu", "GioiThieu", new { }, new { @class = "nav-stylehead" })
                            </li>

                            <li class="">
                                @Html.ActionLink("Bảng Giá", "BangGia", new { }, new { @class = "nav-stylehead" })
                            </li>
                            <li class="">
                                @Html.ActionLink("Blog Chế Biến", "Index","Blog", new { }, new { @class = "nav-stylehead" })
                            </li>
                            <li class="">
                                <a class="nav-stylehead" href="@Url.Action("contact","Home")">Liên Hệ</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</div>




