@using  HaiSanShop.Data.Entites
@model IEnumerable<SanPham>
@{
    ViewBag.Title = "Quản Lý Hàng Sắp Hết";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

@if (Model.Count() != 0)
{
    <table class="table table-responsive">
        <tr>
            <th>MaSP</th>
            <th>Sản Phẩm</th>
            <th>Thương Hiệu</th>
            <th>Số Lượng Tồn</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSP</td>
                <td>@item.TenSP</td>
                <td>@item.DanhMucSanPhams.TenDanhMuc</td>
                <td>@item.SoLuongTon</td>
                <td><a href="@Url.Action("NhapHangDon","QLSanPham",new {@MaSP = item.MaSP })" class="btn btn-success">Nhập Hàng</a></td>

            </tr>
        }

    </table>
}
else
{
    <div><h3 style="color:springgreen">Chưa có sản phẩm nào cần nhập hàng ngay</h3></div>
    <a class="btn btn-success" href="@Url.Action("NhapNhieuSP","QLSanPham")">Nhập Thêm Sản Phẩm</a>
}

