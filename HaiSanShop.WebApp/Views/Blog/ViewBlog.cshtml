@using HaiSanShop.Data.Entites
@model Blog
    @{
        ViewBag.Title = "ViewBlog";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


    <div class="services-breadcrumb">
        <div class="agile_inner_breadcrumb">
            <div class="container">
                <ul class="w3_short">
                    <li>
                        <a href="@Url.Action("Index","Blog")">Blog Chế Biến</a>
                        <i>|</i>
                    </li>
                    <li>@Model.TieuDe</li>
                </ul>
            </div>
        </div>
    </div>
 <div>
     <!--Tieu de-->
     <div style="margin:50px 0px 0px 0px ">
         
         <h3>@Model.TieuDe</h3>
     </div>
     <!--Van tat-->
     <div style="margin:20px 0px">
         <p style="margin-bottom:20px;">Ngày Viết :@Model.NgayTao.ToString("dd/MM/yyy")</p>
         <h4>@Html.Raw(Model.VanTat)</h4>
     </div>
     <!--noi dung-->
     <div>
         @Html.Raw(Model.NoiDung)
     </div>

 </div>